{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"paths": {
			"*": ["./node_modules/*", "./src/types/*"]
		}
	},
	"include": ["./src/**/*", "./src/**/*.json"],
	"exclude": ["./node_modules", "../../flex", "./src/**/*.spec.ts"]
}
